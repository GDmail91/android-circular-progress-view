<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <com.github.guilhe.circularprogressview.CircularProgressView
                    android:id="@+id/circularProgressView"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:progress="100"
                    app:progressBarColor="@android:color/white"
                    android:layout_margin="10dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    layout_constraintHorizontal_chainStyle="spread"
                    app:layout_constraintRight_toLeftOf="@+id/circularProgressView2"/>

            <com.github.guilhe.circularprogressview.CircularProgressView
                    android:id="@+id/circularProgressView2"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:progress="90"
                    app:progressBarColor="@android:color/holo_blue_dark"
                    android:layout_margin="10dp"
                    layout_constraintHorizontal_chainStyle="spread"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/circularProgressView3"
                    app:layout_constraintLeft_toRightOf="@+id/circularProgressView"
                    />

            <com.github.guilhe.circularprogressview.CircularProgressView
                    android:id="@+id/circularProgressView3"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:progress="80"
                    app:progressBarThickness="10dp"
                    app:progressBarColor="@android:color/holo_green_dark"
                    android:layout_margin="10dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    layout_constraintHorizontal_chainStyle="spread"
                    app:layout_constraintLeft_toRightOf="@+id/circularProgressView2"/>

            <com.github.guilhe.circularprogressview.CircularProgressView
                    android:id="@+id/circularProgressView4"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:progress="70"
                    app:progressBarThickness="10dp"
                    app:progressBarColor="@android:color/holo_orange_dark"
                    android:layout_margin="10dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    layout_constraintHorizontal_chainStyle="spread"
                    app:layout_constraintTop_toBottomOf="@+id/circularProgressView"
                    app:layout_constraintRight_toLeftOf="@+id/circularProgressView5"/>

            <com.github.guilhe.circularprogressview.CircularProgressView
                    android:id="@+id/circularProgressView5"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:progress="60"
                    app:progressBarThickness="10dp"
                    app:progressBarColor="@android:color/holo_purple"
                    android:layout_margin="10dp"
                    layout_constraintHorizontal_chainStyle="spread"
                    app:layout_constraintTop_toBottomOf="@+id/circularProgressView2"
                    app:layout_constraintLeft_toRightOf="@+id/circularProgressView4"
                    app:layout_constraintRight_toLeftOf="@+id/circularProgressView6"
            />

            <com.github.guilhe.circularprogressview.CircularProgressView
                    android:id="@+id/circularProgressView6"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:progress="50"
                    app:progressBarThickness="10dp"
                    app:progressBarColor="#FFFF00"
                    android:layout_margin="10dp"
                    layout_constraintHorizontal_chainStyle="spread"
                    app:layout_constraintTop_toBottomOf="@+id/circularProgressView3"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/circularProgressView5"
            />

            <com.github.guilhe.circularprogressview.CircularProgressView
                    android:id="@+id/circularProgressView7"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:progress="40"
                    app:progressBarThickness="10dp"
                    app:progressBarColor="@android:color/holo_red_dark"
                    android:layout_margin="10dp"
                    layout_constraintHorizontal_chainStyle="spread"
                    app:layout_constraintTop_toBottomOf="@+id/circularProgressView4"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/circularProgressView8"
            />

            <com.github.guilhe.circularprogressview.CircularProgressView
                    android:id="@+id/circularProgressView8"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:progress="30"
                    app:progressBarThickness="10dp"
                    android:layout_margin="10dp"
                    layout_constraintHorizontal_chainStyle="spread"
                    app:layout_constraintTop_toBottomOf="@+id/circularProgressView5"
                    app:layout_constraintLeft_toRightOf="@+id/circularProgressView7"
                    app:layout_constraintRight_toLeftOf="@+id/circularProgressView9"
            />

            <com.github.guilhe.circularprogressview.CircularProgressView
                    android:id="@+id/circularProgressView9"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:progress="20"
                    app:progressBarThickness="10dp"
                    android:layout_margin="10dp"
                    layout_constraintHorizontal_chainStyle="spread"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/circularProgressView8"
                    app:layout_constraintTop_toBottomOf="@+id/circularProgressView6"
            />

            <com.github.guilhe.circularprogressview.CircularProgressView
                    android:id="@+id/circularProgressView10"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:progress="10"
                    app:progressBarThickness="10dp"
                    android:layout_margin="10dp"
                    layout_constraintHorizontal_chainStyle="spread"
                    app:layout_constraintTop_toBottomOf="@+id/circularProgressView7"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/circularProgressView11"/>

            <com.github.guilhe.circularprogressview.CircularProgressView
                    android:id="@+id/circularProgressView11"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:progress="0"
                    app:progressBarThickness="10dp"
                    android:layout_margin="10dp"
                    layout_constraintHorizontal_chainStyle="spread"
                    app:layout_constraintLeft_toRightOf="@+id/circularProgressView10"
                    app:layout_constraintTop_toBottomOf="@+id/circularProgressView8"
                    app:layout_constraintRight_toLeftOf="@+id/circularProgressView12"/>

            <com.github.guilhe.circularprogressview.CircularProgressView
                    android:id="@+id/circularProgressView12"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:progress="-10"
                    app:progressBarThickness="10dp"
                    android:layout_margin="10dp"
                    layout_constraintHorizontal_chainStyle="spread"
                    app:layout_constraintLeft_toRightOf="@+id/circularProgressView11"
                    app:layout_constraintTop_toBottomOf="@+id/circularProgressView9"
                    app:layout_constraintRight_toRightOf="parent"/>

            <com.github.guilhe.circularprogressview.CircularProgressView
                    android:id="@+id/animated_circularProgressView"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="10dp"
                    layout_constraintHorizontal_chainStyle="spread"
                    app:layout_constraintTop_toBottomOf="@+id/circularProgressView11"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"/>

        </android.support.constraint.ConstraintLayout>
    </ScrollView>

</layout>